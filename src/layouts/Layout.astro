---
import { ClientRouter } from "astro:transitions";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import MobileNav from "../components/MobileNav.astro";
import SearchModal from "../components/SearchModal";
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: "website" | "article";
  publishedTime?: string;
  author?: string;
}

const {
  title,
  description = "Gin's bleeding edge blog exploring AI, software engineering, and technology.",
  image,
  type = "website",
  publishedTime,
  author = "IchimaruGin728",
} = Astro.props;

// Construct full URL for canonical and social media
const canonicalURL = new URL(
  Astro.url.pathname,
  Astro.site || Astro.url.origin,
);

// Determine OG image
const ogImage =
  image ||
  (Astro.url.pathname.startsWith("/blog/")
    ? `/og${Astro.url.pathname.replace("/blog", "")}.png`
    : "/og-default.png");
const fullOgImage = new URL(ogImage, Astro.site || Astro.url.origin).href;

// Format title with site name
const fullTitle =
  title === "Home"
    ? "Gin's Blog - AI, Tech & Engineering"
    : `${title} | Gin's Blog`;
---

<!doctype html>
<html lang="en-SG" class="dark">
  <head>
    <ClientRouter />
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, viewport-fit=cover"
    />

    <!-- Favicons & PWA -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="manifest" href="/manifest.json" />
    <meta name="theme-color" content="#8b5cf6" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta
      name="apple-mobile-web-app-status-bar-style"
      content="black-translucent"
    />
    <meta name="apple-mobile-web-app-title" content="GinBlog" />
    <link rel="apple-touch-icon" href="/pwa-192x192.png" />

    <!-- SEO Meta Tags -->
    <link rel="canonical" href={canonicalURL} />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <meta name="author" content={author} />
    <meta
      name="robots"
      content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1"
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={fullOgImage} />
    <meta property="og:site_name" content="Gin's Blog" />
    <meta property="og:locale" content="en_SG" />
    {
      publishedTime && (
        <meta property="article:published_time" content={publishedTime} />
      )
    }
    {author && <meta property="article:author" content={author} />}

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={fullOgImage} />
    <meta name="twitter:creator" content="@IchimaruGin728" />

    <title>{fullTitle}</title>
  </head>
  <body class="bg-[#050505] text-white min-h-screen font-sans flex flex-col">
    <!-- Background Elements -->
    <div class="fixed inset-0 z-0 pointer-events-none overflow-hidden">
      <div
        class="absolute top-[-20%] right-[-10%] w-[600px] h-[600px] bg-brand-primary/10 rounded-full blur-[120px]"
      >
      </div>
      <div
        class="absolute bottom-[-20%] left-[-10%] w-[600px] h-[600px] bg-brand-accent/5 rounded-full blur-[120px]"
      >
      </div>
    </div>

    <Header />

    <main
      class="relative z-10 pt-32 px-6 max-w-7xl mx-auto w-full flex-grow pb-24 md:pb-0"
    >
      <slot />
    </main>

    <div class="hidden">
      <!-- Hidden hydration trigger for Islands if needed -->
    </div>

    <MobileNav />
    <Footer />

    <SearchModal client:idle />
  </body>
</html>
